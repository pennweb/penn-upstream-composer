{% set external_link_class = 'cta--arrow arrow-no-border' %}
<footer class="footer footer__upstream">
  <div class="contain contain--wide">
    <div class="footer__columns">
      <div class="footer__column">
        <a href="https://www.upenn.edu/" title="University of Pennsylvania">
          <img src="{{ base_path ~ directory }}/assets/img/UPenn-logo.svg" alt="University of Pennsylvania" class="footer__logo">
        </a>
          {% set footer_utility = simplify_menu('footer-utility') %}
      </div>
      <div class="footer__column">
        <ul class="footer__list footer__list--full">
          {% set legal = simplify_menu('legal') %}
          {% for legal in legal.menu_tree %}
            {% set link_class = footer_legal_show_external_links and penn_twig_is_link_external(legal) ? external_link_class : '' %}
            <li class="footer__item">
              <a href="{{ legal.url }}" class="footer__link {{ link_class }}">{{ legal.text }}</a>
            </li>
          {% endfor %}
        </ul>
        <div class="footer__info_container">
          <p class="footer__info">Philadelphia, PA 19104</p>
          <p class="footer__info">Telephone: <a href="tel:2158985000">(215) 898-5000</a></p>
        </div>
      </div>
    </div>
  </div>
</footer>