{% if content.items|length > 0 %}

<button type="button" class="accordion-toggle-tab" aria-controls="tabpanel-{{ content.penn_api_entity.id() }}">
  <span class="accordion-toggle-tab__icon" aria-hidden="true">
    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="9" viewbox="0 0 14 9">
      <g>
        <g><path fill="none" class="strok" stroke-linecap="round" stroke-miterlimit="20" stroke-width="2.1" d="M1 1v0l6 6v0l6-6v0"/></g>
      </g>
    </svg>
  </span>
  <span class="accordion-toggle-tab_text">{{ content.field_filter_title.0 }}</span>
</button>

<section class="wikit-tab" role="tabpanel" id="tabpanel-{{ content.penn_api_entity.id() }}" aria-labelledby="tab-{{ content.penn_api_entity.id() }}" tabindex="-1">

  {# Tab content #}
  {# This is the only unique part to this tab item template. 
     # Other tab item templates can copy the boilerplate 
     # around this. I did it this way to avoid a nested entity,
     # which would complicate editing in the admin. #}


    <div class="card-slider"> <div data-slider="three-across-cards">
            {% for item in content.items %}

      <article class="card card--small" style="display:none">
        <figure class="card__figure">
          <img src="{{ item.image }}" alt="{{ item.image_alt }}" class="card__image">
        </figure>
        <div class="card__content">
          <h2 class="card__title">
            <a href="{{ item.url }}" class="card__title__link">
              {{ item.homepage_title is empty ? item.title : item.homepage_title }}
            </a>
          </h2>
          <p>{{ item.dek is empty ? item.summary : item.dek }}</p>
        </div>
      </article>
      {% endfor %}

    </div>
  </div>

  {# End tab content #}
</section>
{% endif %}