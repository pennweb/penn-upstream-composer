<div class="layout {{ content.field_column_layout }} {{ content.field_margins }}">
  <div class="{{ content.field_borders }}">
    {% if content.field_title_has_value or content.field_description_has_value %}
      <header class="section-header section-header--centered">
        {{ content.field_title }}
        {{ content.field_description }}
      </header>
    {% endif %}
    <div class="contain layout__flex{{ content.field_flex_layout }}">
      {{ content.field_penn_entity_reference }}
    </div>
  </div>
</div>
