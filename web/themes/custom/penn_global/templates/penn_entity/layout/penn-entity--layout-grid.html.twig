<section class="grid custom-margin {{ content.field_margins }} {{ content.field_borders }} {{ content.field_padding }} {{content.field_background_color }}">
  <div class="contain">
  {% if field_title_has_value or field_description_formatted_has_value or field_description_has_value %}    
    <header class="section-header section-header--centered {{ section_header_class }}">
      {{ content.field_title }}
      <div class="wysiwyg">
        {{ content.field_description_formatted }} 
      </div>
      {{ content.field_description }} {#  deprecated; replaced by formatted description #}
    </header>
  {% endif %}
    <div class="grid__content {{ content.field_grid_layout }}">
      {{ content.field_penn_entity_reference }}
    </div>
  </div>
</section>