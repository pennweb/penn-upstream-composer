<section class="grid {{ content.field_borders }} {{ content.field_padding }} {{content.field_background_color }}">
  <div class="contain">
  {% if content.field_title_has_value or content.field_description_has_value %}    
    <header class="section-header section-header--centered {{ content.section_header_class }}">
      {{ content.field_title }}
      {{ content.field_description }}
    </header>
  {% endif %}
    <div class="grid__content {{ content.field_grid_layout }}">
      {{ content.field_penn_entity_reference }}
    </div>
  </div>
</section>